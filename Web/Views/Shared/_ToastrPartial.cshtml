@using Common

@if (TempData["ErrorMessage"] != null)
{
    <script>
        $(function() {
            toastr.error('@TempData["ErrorMessage"]?.ToString()');
        });
    </script>
}

@if (TempData["WarningMessage"] != null)
{
    <script>
        $(function() {
            toastr.warning('@TempData["WarningMessage"]?.ToString()');
        });
    </script>
}

@if (TempData["SuccessMessage"] != null)
{
    <script>
        $(function() {
            toastr.success('@TempData["SuccessMessage"]?.ToString()');
        });
    </script>
}