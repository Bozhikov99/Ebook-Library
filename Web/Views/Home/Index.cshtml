@{
    ViewData["Title"] = "Home";
}

<section class="bg-dark text-light p-5 text-center text-sm-start">
      <div class="container">
        <div class="d-lg-flex align-items-center justify-content-between">
          <div>
            <h1>Welcome to <span class="orange-txt"> eBook</span></h1>
            <p class="lead my-4">
              The world's leading online book reading service with easy access
              to thousands of books. Enjoy different genres on any device you
              use. <br />
              View the details about our subscriptions below:
            </p>
            <a asp-controller="Subscription"
               asp-action="Subscribe"
               class="btn navbutton" id="subdirect">
                Subscribe Now
              </a>
          </div>
          <img class="img-fluid w-50 d-none d-lg-block" src="/img/books.svg" />
        </div>
      </div>
    </section>

    <!-- Info Boxes -->

    <section class="p-5">
      <div class="container">
        <div class="row text-center">
          <div class="col-md my-1">
            <div class="card bg-dark text-light">
              <div class="card-body text-center">
                <div class="h1 mb-3">
                  <i class="bi bi-book orange-txt"></i>
                </div>
                <h3 class="card-title mb-3">Books</h3>
                <p class="card-text">
                  Easy access to thousands of books all inside your browser.
                  Read any book you want without having to buy it beyond having
                  a subscription.
                </p>
              </div>
            </div>
          </div>
          <div class="col-md my-1">
            <div class="card bg-dark text-light">
              <div class="card-body text-center">
                <div class="h1 mb-3">
                  <i class="bi bi-tablet orange-txt"></i>
                </div>
                <h3 class="card-title mb-3">Devices</h3>
                <p class="card-text">
                  Use our services on any device you use on a regular basis be
                  it desktop computers, tablets, phones or anything else you can
                  imagine.
                </p>
              </div>
            </div>
          </div>
          <div class="col-md my-1">
            <div class="card bg-dark text-light">
              <div class="card-body text-center">
                <div class="h1 mb-3">
                  <i class="bi bi-person-circle orange-txt"></i>
                </div>
                <h3 class="card-title mb-3">About</h3>
                <p class="card-text">
                  This site was created by Blagovest Dimitrov from specialty
                  "Computer and Software Engineering" IV for a diploma project.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
